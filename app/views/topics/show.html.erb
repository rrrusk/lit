<p id="notice"><%= notice %></p>

  <h1><%= @topic.title %></h1>

	<div style="padding:3px;border:solid 1px #000;width:300px;">
		<h2><%= @topic.user_id %></h2>
		<%= @topic.body %><br>
		<div class="pictures">
			<%= image_tag(@topic.picture_url) if @topic.picture.present? %><br>
		</div>
	</div>

	<% @topic.responses.each do |response| %> 
		<%= response.body %> <br>
		<%= image_tag(response.picture_url) if response.picture.present? %>
		<!-- 画像がいっぱい出ちゃう問題未解決 -->
	<% end %>

<%= link_to '返信', new_response_path(topic_id:@topic.id) %>

